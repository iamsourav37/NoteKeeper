@model NoteKeeper.Web.Models.DTO.NotesDTOs.NoteCreateDTO;
@{
    ViewBag.Title = "Create Note";
}


<div class="container-fluid d-flex justify-content-center align-items-center vh-90">
    <div class="card w-50 p-4" style="background-color: #f0f0f0;">
        <h3 class="card-title text-center mb-4">Create New Note</h3>
        <form asp-action="Create">
            <div class="mb-3">
                <label asp-for="Title" class="form-label">Title</label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="NoteContent" class="form-label">Content</label>
                <textarea asp-for="NoteContent" class="form-control" rows="5"></textarea>
                <span asp-validation-for="NoteContent" class="text-danger"></span>
            </div>
            <div class="form-group w-25">
                <label asp-for="Color" class="form-label">Color</label>
                <input name="Color" id="Color" type="Color" value="#FF4191" class="form-control colorpicker" />
                <span asp-validation-for="Color" class="text-danger"></span>
            </div>
            <br />
            <button type="submit" class="btn btn-primary w-100">Create Note</button>
        </form>
    </div>
</div>
